<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuheng.pangolin.mapper.UserMapper">

    <select id="getUserByUID" resultType="com.yuheng.pangolin.model.User">
        select * from users where id=#{uid}
    </select>

    <select id="getUserByUsername" resultType="com.yuheng.pangolin.model.User">
        select * from users where username=#{username}
    </select>
    
    <insert id="addUser" parameterType="com.yuheng.pangolin.model.User">
        insert into users (uid, username, secPassword, salt, level, experience)
        values (#{uid}, #{username}, #{secPassword}, #{salt}, #{level}, #{experience})
    </insert>

</mapper>